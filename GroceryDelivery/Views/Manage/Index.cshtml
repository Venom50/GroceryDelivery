@model GroceryDelivery.Models.RegisterViewModel
@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profil</h2>

<div>
    <h4>Zmień ustawienia konta</h4>
    
    <ul>
        <li>Imię: @Model.FirstName</li>
        <li>Nazwisko: @Model.LastName</li>
        <li>Miasto: @Model.City</li>
        <li>Numer Pocztowy: @Model.PostalCode</li>
        <li>Ulica: @Model.Street</li>
        <li>Numer Domu: @Model.HouseNumber</li>
        <li>Numer Mieszkania: @Model.ApartamentNumber</li>
        @if (Model.CreditCard.HasValue)
        {
            <li>Karta Kredytowa: dodana</li>
        }
        else
        {
            <li>Karta Kredytowa: nie dodana</li>
        }
        <hr />
        <tr>
            <td>@Html.ActionLink("Edytuj Profil", "Edit", "Manage", new { name = HttpContext.Current.User.Identity.Name }, new { @class = "btn btn-primary" })</td>
            <td>@Html.ActionLink("Edytuj metodę płatności", "EditPaymentMethod", "Manage", new { name = HttpContext.Current.User.Identity.Name }, new { @class = "btn btn-primary" })</td>
        </tr>
    </ul>

</div>
