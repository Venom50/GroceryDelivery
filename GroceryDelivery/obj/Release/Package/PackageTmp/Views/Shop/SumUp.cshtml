@model GroceryDelivery.ViewModels.OrderPriceViewModel
@{
    ViewBag.Title = "SumUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rachunek</h2>

<div>
    @using (Html.BeginForm("SumUp", "Shop", FormMethod.Get))
    {
        double suma = 0;
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Cena</th>
                    <th>Ilość</th>
                    <th>Łączna cena</th>
                </tr>
            </thead>
            @for (int i = 0; i < Model.products.Count(); i++)
            {
                <tr>
                    <td>@Model.products[i].Name</td>
                    <td>@Model.products[i].Price zł</td>
                    <td>@Model.products[i].Quanity</td>
                    <td>@Model.priceOrder[i].Value zł</td>
                </tr>
                suma += Model.priceOrder[i].Value;
            }
        </table>
        <h2>Suma: @suma zł</h2>
        <br />
        <h3>Wiadomość z rachunkiem została wysłana na maila</h3>
        <input type="submit" class="btn btn-primary" value="Potwierdzam" />
    }

</div>

